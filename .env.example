# Backend core service (psiRizerio-services)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/PsiRizerio
SPRING_DATASOURCE_USERNAME=psirizerio
SPRING_DATASOURCE_PASSWORD=changeme
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_SQL_INIT_MODE=always

# RabbitMQ (shared by services)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
EMAIL_QUEUE=emailQueue
EMAIL_EXCHANGE=email-exchange
EMAIL_ROUTING_KEY=email.send

# SMTP / Email service configuration
APP_MAIL_ENABLED=true
APP_MAIL_FROM=you@example.com
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=you@example.com
MAIL_PASSWORD=app-password-here
MAIL_SMTP_AUTH=true
MAIL_STARTTLS=true
MAIL_TIMEOUT_MS=5000
SPRING_MAIL_PROPERTIES_MAIL_SMTP_SSL_ENABLE=false
APP_SMTP_HOST=smtp.gmail.com
APP_SMTP_PORT=587
APP_SMTP_USERNAME=you@example.com
APP_SMTP_PASSWORD=app-password-here

# Optional overrides for published ports
PSIRIZERIO_SERVICES_PORT=8080
PSIRIZERIO_EMAIL_PORT=8082
PSIRIZERIO_RELATORIOS_PORT=8081

# Local MySQL container credentials
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=PsiRizerio
MYSQL_USER=psirizerio
MYSQL_PASSWORD=changeme
